#window-padding-balance = true
#window-padding-color = extend

shell-integration = zsh

# tmux approximations
keybind = ctrl+b>x=close_surface
# panes
keybind = ctrl+b>%=new_split:right
keybind = ctrl+b>|=new_split:right
#keybind = ctrl+b>quote=new_split:down
#keybind = ctrl+b>_=new_split:down
keybind = ctrl+b>-=new_split:up
# pane navigation
keybind = ctrl+b>h=goto_split:left
keybind = ctrl+b>j=goto_split:bottom
keybind = ctrl+b>k=goto_split:top
keybind = ctrl+b>l=goto_split:right
# windows/tabs
keybind = ctrl+b>c=new_tab
keybind = ctrl+b>&=close_tab


