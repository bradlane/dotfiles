# history
export HISTSIZE=100000
export SAVEHIST=100000
setopt SHARE_HISTORY

# Homebrew path
export PATH=/opt/homebrew/bin:$PATH

# Setup fzf binds & fuzzy completion
source <(fzf --zsh)
export JSII_SILENCE_WARNING_UNTESTED_NODE_VERSION=1

# homebrew completions
if type brew &>/dev/null
then
  FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"

  autoload -Uz compinit
  compinit
fi

alias ls=eza
alias cat=bat
alias lg=lazygit
alias toolbox="docker run -it --rm -w/code/ -v ~/Code:/code --dns=10.0.10.252 --dns=10.0.10.253 docker.paylocity.com/paylocity/refreshing-toolbox:latest /bin/bash"
eval "$(starship init zsh)"

# The following lines have been added by Docker Desktop to enable Docker CLI completions.
fpath=(/Users/blane/.docker/completions $fpath)
autoload -Uz compinit
compinit
# End of Docker CLI completions

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/blane/.lmstudio/bin"
# End of LM Studio CLI section

